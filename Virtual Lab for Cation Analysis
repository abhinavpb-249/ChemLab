       height: 200px;
       -webkit-transition: all 0.5s linear;
          -moz-transition: all 0.5s linear;
           -ms-transition: all 0.5s linear;
            -o-transition: all 0.5s linear;
               transition: all 0.5s linear;
  } 
  
  .ReagentHideOptions {
    display:none;
    opacity: 0;
    font-size:20px; 
    background:lightgrey;
    
      height: 0px;
      
       -webkit-transition: all 0.5s linear;
          -moz-transition: all 0.5s linear;
           -ms-transition: all 0.5s linear;
            -o-transition: all 0.5s linear;
               transition: all 0.5s linear;
  }
  
  .ReagentShowOptions {
    display:block;
     opacity: 1;
    font-size:20px; 
    background:lightgrey;
    
       height: 250px;
       -webkit-transition: all 0.5s linear;
          -moz-transition: all 0.5s linear;
           -ms-transition: all 0.5s linear;
            -o-transition: all 0.5s linear;
               transition: all 0.5s linear;
  }   
    
  
