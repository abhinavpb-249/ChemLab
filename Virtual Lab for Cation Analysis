    }
  
    
    
    
   .precipitate {
     height:300px;
    width:50px;
    background: black;
   transition: background-color 2s ease;
   
     transform: translate(0, 150px);
     transition: all cubic-bezier(.2, .6, .8, .4) 1s;
    }
   
  
    
    
  
  
   
    
    
    
    
