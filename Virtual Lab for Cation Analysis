  <div id="reagentselection" class="ReagentHideOptions" style="   font-size:20px; background:lightgrey; " >
        <input type="radio" name="reagent" value="dil.HCl" id="dil.HCl" />
        <label for="dil.HCl">dil.HCl</label>
       <br />
        <input type="radio" name="reagent" value="con.HCl" id="con.HCl" />
        <label for="con.HCl">con.HCl</label>
       <br/>
        <input type="radio" name="reagent" value="H2S" id="H2S" />
        <label for="H2S">H2S</label>
    <br />
        <input type="radio" name="reagent" value="NaOH" id="NaOH" />
        <label for="NaOH">NaOH</label>
        
       <br />
        <input type="radio" name="reagent" value="NH4Cl" id="NH4Cl" />
        <label for="NH4Cl">NH4Cl</label>
       <br />
