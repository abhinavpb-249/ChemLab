<div id="functions">
<button onclick="shake()">Shake (Mix)</button>
  
<button onclick="filtered()">Filter</button>
</div>

  <script>
    
    function addreagent() 
    {
    const reagentselection=document.getElementById("reagentselection");
        if (reagentselection.style.display="none"){reagentselection.style.display="block"}
    
    }
    
   function reagentselected()
    {
    const reagentselection=document.getElementById("reagentselection");
        if (reagentselection.style.display="block"){reagentselection.style.display="none"}
    }
    
    

      function addcation()
      {
        
       
      
    const cationselection=document.getElementById("cationselection");
        if (cationselection.style.display="none"){cationselection.style.display="block"}
      
      }
    
    function cationselected()
    {
    const cation=document.getElementById("cation");
        if (cation.style.display="none"){cation.style.display="block"}
      
     const addcationcontainer=document.getElementById("addcationcontainer");
        if (addcationcontainer.style.display="block"){addcationcontainer.style.display="none"}
      
    }
    

       function shake()
      {
       const cation=document.getElementById("cation");
        if (cation.style.display="block"){cation.style.display="none"}
      }

       function filtered()
      {

      var filtered = document.getElementsByClassName("filtered");
    var i;
    for (i = 0; i <filtered.length; i++) {
      filtered[i].style.display = "block";
    }
      }


      var fillPortion = 0 // the first state is 0%
      document.getElementById('add-water-btn').addEventListener('click', () => {
        let height = document.getElementById('banner').clientHeight // get container height
        // prevent added more than 100%
        if (fillPortion < 100) {
          fillPortion += 10 // added 25% on every click
          // since the translate Y is backward (full is 0px, empty is 150px), then the fill portion must be backward to (the first click is 75%, second click is 50%, last click is 0%)
          document.querySelector('#banner .fill').style.transform = 'translate(0, ' + ((100 - fillPortion) / 100) * height + 'px)'
        } else {
          // add code if already full
        }
      })
    
    document.getElementById('add-reagent-btn').addEventListener('click', () => {
        let height = document.getElementById('banner').clientHeight // get container height
        // prevent added more than 100%
        if (fillPortion < 100) {
          fillPortion += 10 // added 25% on every click
          // since the translate Y is backward (full is 0px, empty is 150px), then the fill portion must be backward to (the first click is 75%, second click is 50%, last click is 0%)
          document.querySelector('#banner .fill').style.transform = 'translate(0, ' + ((100 - fillPortion) / 100) * height + 'px)'
        } else {
          // add code if already full
        }
      })
    
    
  </script>
</div>

